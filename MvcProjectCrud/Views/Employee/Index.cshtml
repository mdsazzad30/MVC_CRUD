@model IEnumerable<MvcProjectCrud.Models.Employee>


<div class="card">
   <div class="card-header d-flex justify-content-between">               

            <h3>Employee List</h3>                          
            
        <a asp-action="Create">Create New Employee</a>
</div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Division)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ResumeUpload)
                        </th>

                        <th> Action </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Division)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ResumeUpload)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdNumber">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.IdNumber">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.IdNumber">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>  
   </div>
</div>